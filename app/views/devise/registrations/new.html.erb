<h2 class="text-2xl font-bold text-center my-4"><%= t('.sign_up') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'space-y-6' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :username, class: 'block text-gray-700 font-semibold' %>
    <%= f.text_field :username, autofocus: true, class: 'bg-white border border-gray-300 w-full p-2' %>
  </div>

  <div class="field">
    <%= f.label :email, class: 'block text-gray-700 font-semibold' %>
    <%= f.email_field :email, autocomplete: "email", class: 'bg-white border border-gray-300 w-full p-2' %>
  </div>

  <div class="field">
    <%= f.label :password, class: 'block text-gray-700 font-semibold' %>
    <% if @minimum_password_length %>
    <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'bg-white border border-gray-300 w-full p-2' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: 'block text-gray-700 font-semibold' %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'bg-white border border-gray-300 w-full p-2' %>
  </div>

  <div class="actions">
    <%= f.submit t('.sign_up'), class: 'btn btn-primary w-full' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
