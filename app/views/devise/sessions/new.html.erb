<h2 class="text-2xl font-bold text-center my-4"><%= t('.sign_in') %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'space-y-6' }) do |f| %>
  <div class="field">
    <%= f.label :email, class: 'block font-semibold' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'bg-white border border-gray-300 w-full p-2' %>
  </div>

  <div class="field">
    <%= f.label :password, class: 'block font-semibold' %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: 'bg-white border border-gray-300 w-full p-2' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me, class: 'checkbox checkbox-primary' %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit t('.sign_in'), class: 'btn btn-primary w-full' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
